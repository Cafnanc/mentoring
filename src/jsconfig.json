{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"baseUrl": "./",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"@configs": ["./configs"],
			"@configs*": ["./configs*"],
			"@constants": ["./constants"],
			"@constants*": ["./constants*"],
			"@controllers": ["./controllers"],
			"@controllers*": ["./controllers*"],
			"@db": ["./db"],
			"@db*": ["./db*"],
			"@generics": ["./generics"],
			"@generics*": ["./generics*"],
			"@health-checks": ["./health-checks"],
			"@health-checks*": ["./health-checks*"],
			"@middlewares": ["./middlewares"],
			"@middlewares*": ["./middlewares*"],
			"@public": ["./public"],
			"@public*": ["./public*"],
			"@routes": ["./routes"],
			"@routes*": ["./routes*"],
			"@services": ["./services"],
			"@services*": ["./services*"],
			"@validators": ["./validators"],
			"@validators*": ["./validators*"]
		}
	},
	"exclude": ["node_modules"]
}
